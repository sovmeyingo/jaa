---

<div class="flex flex-wrap gap-3" role="list">
	{links.map((link) => (
		<a
			class="glass-button group"
			href={link.href}
			target="_blank"
			rel="noreferrer"
			role="listitem"
			aria-label={`${link.label} profilini aç`}
		>
			<span class="icon-wrap">
				<svg
					class="h-4 w-4 text-slate-100 transition-transform duration-300 group-hover:scale-110"
					viewBox="0 0 16 16"
					fill="currentColor"
					aria-hidden="true"
				>
					<g set:html={icons[link.icon]} />
				</svg>
			</span>
			<div class="flex flex-col text-left leading-tight">
				<span class="text-xs uppercase tracking-[0.2em] text-slate-300">{link.label}</span>
				<span class="font-semibold text-sm text-white">{link.handle}</span>
			</div>
		</a>
	))}
</div>

