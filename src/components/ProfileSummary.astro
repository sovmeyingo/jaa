---
/**
 * Profil detay kart覺: isim, rol, k覺sa bio ve h覺zl覺 bilgiler.
 */
interface Highlight {
	label: string;
	value: string;
}

interface Props {
	name: string;
	role: string;
	bio: string;
	highlights: Highlight[];
}

const { name, role, bio, highlights } = Astro.props as Props;
---

<section class="space-y-6 text-center md:text-left">
	<header class="space-y-2">
		<p class="text-xs uppercase tracking-[0.5em] text-slate-400">Profil</p>
		<h1 class="text-4xl font-semibold text-white md:text-5xl">{name}</h1>
		<p class="text-gradient text-lg font-medium">{role}</p>
	</header>

	<p class="mx-auto max-w-2xl text-base text-slate-300 md:mx-0">{bio}</p>

	<ul class="glass-panel grid gap-3 sm:grid-cols-2" role="list">
		{highlights.map((item) => (
			<li class="rounded-2xl border border-white/5 bg-white/5 px-4 py-3 text-left backdrop-blur">
				<p class="text-xs uppercase tracking-[0.3em] text-slate-400">{item.label}</p>
				<p class="text-lg font-semibold text-white">{item.value}</p>
			</li>
		))}
	</ul>
</section>

